---
import Layout from "@/layouts/Layout.astro";
import ButtonLink from "@/components/ui/ButtonLink.astro";

const benefits = [
  "Step-by-step migration checklist",
  "Cost comparison calculator (Excel)",
  "Agency white-label agreement template",
  "Technical architecture diagrams",
  "Performance optimization checklist",
  "Client onboarding templates"
];
---

<Layout 
  title="Free: Modern Web Stack Blueprint for Agencies | Rule The Web"
  description="Download our complete blueprint to migrate from bloated tech stacks to our high-performance, high-margin web architecture. Includes checklists, templates, and calculators."
  robots="index,follow"
>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-heliotrope-50 to-white dark:from-gray-900 dark:to-gray-800 py-16">
        <div class="max-w-4xl mx-auto px-4 text-center">
            <span class="inline-block px-4 py-1 rounded-full bg-heliotrope-100 text-heliotrope-700 dark:bg-heliotrope-900 dark:text-heliotrope-300 text-sm font-semibold mb-4">
                Free Download
            </span>
            <h1 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
                The Modern Web Stack Blueprint
            </h1>
            <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto">
                Everything agencies need to transition from bloated, low-margin tech stacks 
                to our high-performance, high-profitability architecture.
            </p>
            
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 max-w-2xl mx-auto mb-8">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
                    What's Included:
                </h2>
                <ul class="space-y-4 text-left">
                    {benefits.map((benefit, index) => (
                        <li class="flex items-start">
                            <svg class="w-6 h-6 text-heliotrope-600 dark:text-heliotrope-400 mt-1 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-gray-700 dark:text-gray-300">{benefit}</span>
                        </li>
                    ))}
                </ul>
            </div>
            
            <!-- Simple Email Form -->
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 max-w-md mx-auto">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">
                    Get Instant Access
                </h3>
                <form class="space-y-4" action="/api/submit-blueprint" method="POST">
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                            Email Address
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email"
                            required
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-heliotrope-500 focus:border-transparent"
                            placeholder="your@agency.com"
                        />
                    </div>
                    <div>
                        <label for="agency" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                            Agency Name (Optional)
                        </label>
                        <input 
                            type="text" 
                            id="agency" 
                            name="agency"
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-heliotrope-500 focus:border-transparent"
                            placeholder="Your Agency LLC"
                        />
                    </div>
                    <button 
                        type="submit"
                        class="w-full bg-heliotrope-600 hover:bg-heliotrope-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors"
                    >
                        Download Blueprint Now
                    </button>
                    <p class="text-xs text-gray-500 dark:text-gray-400 text-center">
                        No spam. Unsubscribe anytime. Download link sent immediately.
                    </p>
                </form>
            </div>
        </div>
    </section>

    <!-- Social Proof -->
    <section class="py-16 bg-gray-50 dark:bg-gray-800">
        <div class="max-w-4xl mx-auto px-4">
            <h2 class="text-2xl font-bold text-center text-gray-900 dark:text-white mb-8">
                Used by 47 Agencies to Increase Margins
            </h2>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow">
                    <p class="text-gray-600 dark:text-gray-300 italic mb-4">
                        "The migration checklist alone saved us 40 hours of planning."
                    </p>
                    <p class="font-semibold text-gray-900 dark:text-white">
                        Sarah K., Digital Agency Owner
                    </p>
                </div>
                <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow">
                    <p class="text-gray-600 dark:text-gray-300 italic mb-4">
                        "Went from 25% to 68% margins in 3 months using this blueprint."
                    </p>
                    <p class="font-semibold text-gray-900 dark:text-white">
                        Mark T., Web Studio
                    </p>
                </div>
                <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow">
                    <p class="text-gray-600 dark:text-gray-300 italic mb-4">
                        "The white-label templates made onboarding 5x faster."
                    </p>
                    <p class="font-semibold text-gray-900 dark:text-white">
                        Jessica L., Boutique Agency
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Next Steps -->
    <section class="py-16 bg-white dark:bg-gray-900">
        <div class="max-w-4xl mx-auto px-4 text-center">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
                Ready to Implement?
            </h2>
            <p class="text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
                Download the blueprint first, then explore our partnership options for 
                hands-on implementation support.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <ButtonLink href="/partnership-options" variant="primary" size="md">
                    View Partnership Tiers
                </ButtonLink>
                <ButtonLink href="/contact" variant="outline" size="md">
                    Schedule Consultation
                </ButtonLink>
            </div>
        </div>
    </section>
</Layout>